<div class="columns is-mobile">
  <div class="column is-three-fifths is-offset-one-fifth">
    <div class="content">
      <h1 class="title"><%= t('users_admin') %></h1>
      <hr>

      <table class= "table">
        <tr>
          <th><%=User.human_attribute_name("username")%></th>
          <th><%=User.human_attribute_name("user_type")%></th>
          <th><%=User.human_attribute_name("email")%></th>
          <th colspan="2"></th>
        </tr>
        <% @adminpanel.each do |ad| %>
          <tr>
            <td><%= ad.username %></td>
            <td><%= ad.user_type %></td>
            <td><%= ad.email %></td>
            <td><%= link_to t('destroy'), adminpanel_path(id: ad.id), method: :delete, data: { confirm: 'Are you sure you want to delete this user?' } %></td>
            <td><%= link_to t('edit'), edit_adminpanel_path(id: ad.id) %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>