<div class="columns is-mobile">
  <div class="column is-three-fifths is-offset-one-fifth">
    <div class="content">
      <h1 class="title"><%= t('.Administracion de usuarios') %></h1>
      <hr>

      <table class= "table">
        <tr>
          <th>User name</th>
          <th>User type</th>
          <th>Email</th>
          <th>Delete</th>
          <th>Edit</th>
        </tr>
        <% @adminpanel.each do |ad| %>
          <tr>
            <td><%= ad.username %></td>
            <td><%= ad.user_type %></td>
            <td><%= ad.email %></td>
            <td><%= link_to "Delete", adminpanel_path(id: ad.id), method: :delete, data: { confirm: 'Are you sure you want to delete this user?' } %></td>
            <td><%= link_to "Edit", edit_adminpanel_path(id: ad.id) %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>